<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OgrenciguncelleMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="false"
        android:background="#A183468D"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="298dp"
                android:layout_height="119dp"
                android:background="@mipmap/logofelan" />

        <EditText
                android:id="@+id/ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/adÄ±"
                android:inputType="textPersonName"
                android:textSize="12sp" />

        <EditText
                android:id="@+id/soyad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/soyad"
                android:inputType="textPersonName"
                android:textSize="12sp" />

        <EditText
                android:id="@+id/sifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/sifre"
                android:inputType="textPassword"
                android:textSize="12dp" />

        <EditText
                android:id="@+id/boy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/boy"
                android:inputType="textPersonName"
                android:textSize="12dp" />

        <EditText
                android:id="@+id/kilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/kilo"
                android:inputType="textPersonName"
                android:textSize="12dp" />

        <EditText
                android:id="@+id/telefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/numara"
                android:inputType="number"
                android:textSize="12sp" />

        <Button
                android:id="@+id/guncelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF5722"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/guncelle"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

        <Button
                android:id="@+id/geri"
                android:layout_width="114dp"
                android:layout_height="77dp"
                android:background="@mipmap/turuncusolok"
                android:text="@string/geri"
                android:textSize="10sp"
                android:translationX="210dp"
                android:translationY="-10dp" />

    </LinearLayout>
</LinearLayout>